<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        android:background="@color/background_color"
             tools:context=".HesapGecmisFragment">


    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout7">
        <ImageView
                android:src="@drawable/account_circle_48px"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="60dp" android:id="@+id/imageView21" android:layout_weight="1"/>
        <TextView
                android:text="@string/baslik20"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView31" android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="start"
            android:background="@drawable/round_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" android:id="@+id/linearLayout8">
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/account_balance_wallet_48px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/imageView22"/>
            <TextView
                    android:text="@string/baslik21"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/TLisareti"
                    android:textSize="32sp"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33" android:layout_weight="1"/>
            <TextView
                    android:text="@string/baslik23"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_margin="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bakiyeLabel" android:layout_weight="6"/>
        </LinearLayout>
        <ImageView
                android:src="@drawable/arrow_back_ios_48px"
                android:layout_width="match_parent"
                android:rotation="-90"
                android:layout_marginBottom="5dp"
                android:layout_height="31dp" android:id="@+id/imageView23"/>
    </LinearLayout>
    <Button
            android:text="@string/baslik22"
            android:background="@drawable/green_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
            app:layout_constraintVertical_bias="0.24000001"/>
</androidx.constraintlayout.widget.ConstraintLayout>