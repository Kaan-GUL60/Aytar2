<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".MainMenuActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/green_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp" app:srcCompat="@drawable/account_circle_48px"
                android:id="@+id/userProfilImage" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="@string/welcome_text"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/welcomeText"/>
            <TextView
                    android:text="@string/user_name"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/userNameText"/>
        </LinearLayout>
        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/applogo"
                android:id="@+id/appLogo"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/Lay_Ust" android:layout_marginTop="35dp">
        <LinearLayout
                android:id="@+id/Lay_MuzeAra"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/round_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/research"
                    android:id="@+id/imageView8"/>
            <TextView
                    android:text="@string/muze_ara"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content" android:id="@+id/textView9"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/Lay_Oyunlar"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/round_bg"
                android:layout_width="67dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/games"
                    android:id="@+id/imageView10"/>
            <TextView
                    android:text="@string/oyunlar"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:id="@+id/textView10"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/Lay_AlÄ±sveris"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/round_bg"
                android:layout_width="67dp"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/shop_bag"
                    android:id="@+id/imageView11"/>
            <TextView
                    android:text="@string/shopping"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:id="@+id/textView11"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/Lay_Alt"
            app:layout_constraintTop_toBottomOf="@+id/Lay_Ust" android:layout_marginTop="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/Lay_MapSistem"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/round_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/map"
                    android:id="@+id/imageView14"/>
            <TextView
                    android:text="@string/maps"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:id="@+id/textView14"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/Lay_Cuzdanim"
                android:layout_margin="10dp"
                android:background="@drawable/round_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/account_balance_wallet_48px"
                    android:id="@+id/imageView12"/>
            <TextView
                    android:text="@string/wallet"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content" android:id="@+id/textView12"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/Lay_Profil"
                android:layout_margin="10dp"
                android:background="@drawable/round_bg"
                android:layout_width="65dp"
                android:layout_height="wrap_content">
            <ImageView
                    app:srcCompat="@drawable/account_circle_48px"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView13"/>
            <TextView
                    android:text="@string/profil"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:id="@+id/textView13"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>