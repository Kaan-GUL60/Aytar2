<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SatinAlMuzeFragment">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout7">
        <ImageView
                android:src="@drawable/account_circle_48px"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="60dp" android:id="@+id/imageView21" android:layout_weight="1"/>
        <TextView
                android:text="@string/baslik28"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView31" android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="start"
            android:background="@drawable/round_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            android:id="@+id/linearLayout8">
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/account_balance_wallet_48px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/imageView22" tools:ignore="ContentDescription"/>
            <TextView
                    android:text="@string/baslik29"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/TLisareti"
                    android:textSize="32sp"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33" android:layout_weight="1"/>
            <TextView
                    android:text="@string/baslik23"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bakiyeLabel" android:layout_weight="6"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/round_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" android:id="@+id/linearLayout10">
        <TextView
                android:text="@string/baslik30"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView38"/>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <ImageView
                    android:src="@drawable/ic_launcher_background"

                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/urunResmi"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <TextView
                        android:text="@string/baslik32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/urunAdiLabel"/>
                <TextView
                        android:text="@string/baslik31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/urunAdetLabel"/>
            </LinearLayout>
            <TextView
                    android:text="@string/baslik33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/urunFiyatLabel" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/kart5"
            android:background="@drawable/green_button_bg"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/alimOnaylaButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout10"/>

</androidx.constraintlayout.widget.ConstraintLayout>