<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AppUpdateFragment">


    <TextView
            android:text="Uygulamayı kullanmaya devam etmek için güncellemeniz gerekmektedir."
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="wrap_content" android:id="@+id/textView40"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.06999999"/>
    <Button
            android:text="Güncelle"
            android:gravity="center"
            android:background="@drawable/green_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView40" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Güncelle butonuna basarak linkteki uygulamayı indirin ve dosyalardan yükleyin, uygulama güncellenecektir."
            android:layout_margin="20dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView41"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/textView40"/>
</androidx.constraintlayout.widget.ConstraintLayout>