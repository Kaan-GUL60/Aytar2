<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:background="@color/background_color"
             tools:context=".SatinAlmaBasariliFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:textSize="24sp"
            android:text="@string/baslik26" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView37" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.26999998"/>
    <ImageView
            android:src="@drawable/check_48px"
            android:layout_width="184dp"
            android:layout_height="143dp"
            android:id="@+id/imageView25"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView37" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19"/>
    <Button
            android:text="@string/baslik27"
            android:background="@drawable/green_button_bg"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/geriDonButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView25"/>

</androidx.constraintlayout.widget.ConstraintLayout>